[user]
  email = email
  name = name
[core]
  excludesfile = .gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[interactive]
  diffFilter = diff-so-fancy --patch
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[merge]
  tool = vimdiff
